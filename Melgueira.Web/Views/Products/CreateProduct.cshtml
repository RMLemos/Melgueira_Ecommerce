@model Melgueira.Web.Models.ProductViewModel

<h2 class="mt-4">Add new product</h2>

<div class="row">
    <div class="col-md-4 offset-4 mt-3">
        <form asp-action="CreateProduct">
            <div class="form-horizontal">
                <div class="form-group">
                    <label asp-for="ProductName" class="col-md-2 control-label mt-2">Name</label>
                    <div class="col-md-10">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="col-md-2 control-label mt-2"></label>
                    <div class="col-md-10">
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ImageURL" class="col-md-2 control-label mt-2"></label>
                    <div class="col-md-10">
                        <input asp-for="ImageURL" class="form-control" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-5">
                        <label asp-for="Price" class="col-md-2 control-label mt-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Price" asp-format="{0:N2}" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="Stock" class="col-md-2 control-label mt-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Stock" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="col-md-2 control-label">Category Name</label>
                    <div class="col-md-10">
                      <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryId"> </select>
                    </div>
                </div>

                <div class="form-group" style="padding-top: 10px">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-info mt-2" />
                        <a asp-action="Index" class="btn btn-outline-dark mt-2">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
