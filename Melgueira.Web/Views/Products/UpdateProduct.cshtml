@model Melgueira.Web.Models.ProductViewModel

<h2 class="mt-4">Edit product</h2>

<div class="row">
    <div class="col-md-4 offset-4 mt-3">
        <form asp-action="UpdateProduct">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label mt-2">Product Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label mt-2"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="ImageURL" class="control-label mt-2">Image</label>
                    <input asp-for="ImageURL" class="form-control" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <img src="~/images/@Model.ImageURL" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Price" class="control-label mt-2"></label>
                    <input asp-for="Price" asp-format="{0:N2}" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Stock" class="control-label mt-2"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label mt-2">Category Name</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-top: 10px">
                <input type="submit" value="Save" class="btn btn-info mt-2" />
                <a asp-action="Index" class="btn btn-outline-dark mt-2">Back to List</a>
            </div>
        </form>
    </div>
</div>
